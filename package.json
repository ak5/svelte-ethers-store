{
  "name": "svelte-ethers-store",
  "version": "2.2.0",
  "description": "Ethers.js library as a collection of stores for Svelte, Sapper or SvelteKit.",
  "license": "MIT",
  "repository": "gitlab:clb1/svelte-ethers-store",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "svelte": "src/stores.js",
  "types": "dist/svelte-ethers-store.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "main": "./dist/index.js",
      "module": "./dist/index.mjs",
      "svelte": "./src/stores.js",
      "types": "./dist/svelte-ethers-store.d.ts"
    }
  },
  "author": {
    "name": "Christophe Le Bars",
    "email": "<clb@toort.net>"
  },
  "scripts": {
    "update-chains": "node ./scripts/update-chains.js",
    "lint": "prettier-standard --lint 'src/**/*.js'",
    "build": "rollup -c"
  },
  "dependencies": {
    "ethers": "^5.0.0",
    "svelte": "^3.0.0",
    "svelte-proxied-store": "^1.1.3"
  },
  "devDependencies": {
    "lint-staged": "^12.4.0",
    "prettier-standard": "^16.4.1",
    "release-it": "^14.14.2",
    "rollup": "^2.70.2",
    "svelte": "^3.47.0",
    "ethers": "^5.6.4",
    "rollup-plugin-dts": "^4.2.1"
  },
  "lint-staged": {
    "*": [
      "prettier-standard --lint"
    ]
  },
  "release-it": {
    "gitlab": {
      "release": true
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "sveltekit",
    "svelte",
    "sapper",
    "ethereum",
    "ethers",
    "store"
  ],
  "files": [
    "src",
    "dist"
  ]
